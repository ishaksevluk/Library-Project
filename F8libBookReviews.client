client F8libBookReviews;
component F8LIB;
layer Core;
projection F8libBookReviewsHandling;
description "Put some useful description here ...";

--------------------------------- FRAGMENTS ---------------------------------

----------------------------- NAVIGATOR ENTRIES -----------------------------
navigator {
   entry FlibBookReviewsEntry parent F8libNavigator.F8libSideData at index 50 {
      label = "BookReviews";
      page List;
   }
}
-------------------------------- MAIN PAGES ---------------------------------
page List using F8libBookReviewsSet {
   label = "BookReviews";
   list BookReviewsList;
}

--------------------------------- COMMANDS ----------------------------------


--------------------------------- SELECTORS ---------------------------------

selector UsersLovSelector for F8libUsers {
   static UserId;
   static  Name;
}

selector BooksLovSelector for F8libBooks {
   static BookId;
   static BookName;
}

---------------------------------- GROUPS -----------------------------------


----------------------------------- LISTS -----------------------------------
list BookReviewsList for F8libBookReviews {
   lov   UserIdRef with UsersLovSelector {
      searchable = true;
      description = UserIdRef.Name;
   }
   lov   BookIdRef with BooksLovSelector {
      searchable = true;
      description = BookIdRef.BookName;
   }
   static BookReviewsId;
   field Rating;
   field ReviewComment;
   static CommentDate;
}

